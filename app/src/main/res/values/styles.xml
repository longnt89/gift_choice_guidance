<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_title_activity">
        <item name="android:textSize">40sp</item>
    </style>
    
    <style name="style_list_actions">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="style_button_full_width_left_icon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#0000FF</item>
        <item name="android:background">#F5F6CE</item>
    </style>

    <style name="style_button_object">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#0000FF</item>
        <item name="android:background">#F5F6CE</item>
    </style>

    <style name="style_button_event">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#FE9A2E</item>
        <item name="android:background">#BCF5A9</item>
    </style>

    <style name="style_dialog_info">
        <item name="android:textColor">#04B431</item>
    </style>

    <style name="style_dialog_warning">
        <item name="android:textColor">#AEB404</item>
    </style>

    <style name="style_dialog_error">
        <item name="android:textColor">#FA8258</item>
    </style>
</resources>
