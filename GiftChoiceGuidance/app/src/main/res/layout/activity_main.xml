<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="android.project.longnt.giftchoiceguidance.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="@integer/weight_content_title"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            style="@style/style_title_activity"
            android:text="@string/choose_objects"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="@integer/weight_content_listview">
        <ListView
            style="@style/style_list_options"
            android:id="@+id/lst_activitymain_objects"/>
    </LinearLayout>

</LinearLayout>
